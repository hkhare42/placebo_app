#: import random random

<MultiScreens>:

    Screen:
        name: 'home'
        FloatLayout:
            Button:
                text: 'Press Me!'
                border: 30,30,30,30
                background_normal: 'images/normal.png'
                background_down: 'images/down.png'
                on_release: root.current = 'message'
                on_press: b2.text = "[b]{}[/b]".format(random.choice(root.message_string))
                size_hint: (0.2, 0.2)
                pos_hint: {'center_x': 0.5, 'center_y': 0.5}

    Screen:
        name: 'message'
        BoxLayout:
            Button:
                id: b2
                markup: True
                on_press: root.current = 'home'