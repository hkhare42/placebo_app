#:import C kivy.utils.get_color_from_hex

<MultiScreens>:

    Screen:
        name: 'home'

        FloatLayout:
            id: al
            
            TextInput:
                id: ti
                hint_text: 'Enter nickname to get started!'
                on_focus: go.disable = False
                multiline: False
                pos_hint: {'x': 0, 'top': 1}
                size_hint: (0.8, 0.1)
                font_size: '20sp'
                padding: [10, 0.5 * (self.height - self.line_height)]

            Button:
                id: go
                text: 'Go'
                on_release: root.set_stage()
                disable: True
                pos_hint: {'right': 1, 'top': 1}
                size_hint: (0.2, 0.1)

        FloatLayout:
            Button:
                id: pm
                text: 'Press Me!'
                font_size: '20sp'
                border: 30,30,30,30
                background_normal: 'images/normal.png'
                background_down: 'images/down.png'
                on_release: root.current = 'message'
                on_press: b2.text = "[b]{}[/b]".format(root.message_dict[root.ranstr])
                size_hint: (0.4, 0.2)
                pos_hint: {'center_x': 0.5, 'center_y': 0.5}
                opacity: 0
                disabled: True

    Screen:
        name: 'message'
        
        BoxLayout:
            orientation: 'vertical'
            
            Label:
                id: b2
                text_size: self.size
                valign: 'middle'
                halign: 'center'
                markup: True
                background_color: C('#FFFFFF')
                color: C('#000000')

            Label:
                text: 'Did that make you feel good?'
                size_hint: (1, 0.1)
                pos_hint: {'left': 0, 'bottom':0}
                background_color: C('#FFFFFF')
                color: C('#000000')
                    
            BoxLayout:
                size_hint: (1, 0.2)

                Button:
                    text: 'YES'
                    background_color: C('#5AA155')
                    background_normal: ''
                    font_size: '30sp'
                    on_release: root.send_resp(self.text)

                Button:
                    text: 'NO'
                    background_color: C('#E0585B')
                    background_normal: ''
                    font_size: '30sp'
                    on_release: root.send_resp(self.text)